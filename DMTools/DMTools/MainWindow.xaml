<Window x:Class="DMTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMTools"
        mc:Ignorable="d" Visibility="{Binding Path=WDW_Visible, Mode=OneWay}"
        Title="DM Tools" Height="150" Width="300">
    <StackPanel>
        <Button Content="Continue Current Campaign" Margin="3" Command="{Binding Path=BTN_ContinueCurrentCampaign}"/>
        <Button Content="New Campaign" Margin="3" Command="{Binding Path=BTN_NewCampaign}"/>
        <Button Content="Open Campaign" Margin="3" Command="{Binding Path=BTN_OpenCampaign}"/>
    </StackPanel>
</Window>
